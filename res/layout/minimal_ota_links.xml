<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:showDividers="beginning" >

        <LinearLayout
            android:id="@+id/short_cut_changelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_changelog" />

                <TextView
                    android:id="@+id/short_cut_changelog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor = "#000000"
                    android:paddingTop="4dp"
                    android:paddingLeft="5dp"
                    android:text="@string/short_cut_changelog_title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

            <TextView
                android:id="@+id/short_cut_changelog_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "#000000"
                android:paddingLeft="10dp"
                android:text="@string/short_cut_changelog_summary"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/line2"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textColor = "#000000"
            android:layout_height="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout 
            android:id="@+id/short_cut_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:id="@+id/short_cut_download_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor = "#000000"
                    android:paddingTop="4dp"
                    android:paddingLeft="5dp"
                    android:text="@string/short_cut_download_title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

            <TextView
                android:id="@+id/short_cut_download_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "#000000"
                android:paddingLeft="10dp"
                android:text="@string/short_cut_download_uptodate_summary"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/line3"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textColor = "#000000"
            android:layout_height="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout 
            android:id="@+id/short_cut_download_gapps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" >

        </LinearLayout>

        <TextView
            android:id="@+id/line4"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textColor = "#000000"
            android:layout_height="8dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/line5"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textColor = "#000000"
            android:layout_height="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout 
            android:id="@+id/short_cut_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" >

        </LinearLayout>

        <TextView
            android:id="@+id/line5"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textColor = "#000000"
            android:layout_height="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout 
            android:id="@+id/short_cut_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

             <!--disable News Section-->

